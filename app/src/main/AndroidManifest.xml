<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ndk.ccetv_group8.shc">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AppointmentsActivity"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".ServerConfigurationActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SubmitDetailsActivity" />
        <activity
            android:name=".PaymentActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name=".SlotConfirmationActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name=".LaunchersActivity" />
        <activity android:name=".SymptomsActivity" />
        <activity android:name=".DiseasePredictionFailureNoMatch" />
        <activity android:name=".DiseasePredictionFailureNeedMoreSymptoms" />
        <activity
            android:name=".DiseasePredictionSuccess"
            android:label="@string/results" />
        <activity
            android:name=".DoctorActivity"
            android:label="@string/doctors"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".SlotActivity"
            android:label="@string/slots"
            android:theme="@style/AppTheme.Template.Base" />
    </application>

</manifest>